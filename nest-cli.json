{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { "include": "scripts", "outDir": "dist", "watchAssets": true },
      { "include": "public", "outDir": "dist", "watchAssets": true },
      { "include": "ssl/cert.pem", "outDir": "dist", "watchAssets": true },
      { "include": "ssl/privkey.pem", "outDir": "dist", "watchAssets": true }
    ]
  }
}
